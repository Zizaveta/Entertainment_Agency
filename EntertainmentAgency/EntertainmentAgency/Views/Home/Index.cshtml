<style>
    div div div div div div:hover {
        background-color: aliceblue;
    }
</style>
<div>

</div>
<div class="text-right">
    @using(Html.BeginForm("Index", "Order")) { 
    <input class="btn btn-success" type="submit" value="Create order" />
    } 
</div>
<div>
    <button onclick="ShowTypes()">All Types</button>
    <button onclick="ShowDesigns()">All Designs</button>
    <button onclick="ShowMenus()">All Menus</button>
    <button onclick="ShowCompetitions()">All Competitions</button>

</div>

<div id="smthwillhere">

    <div id="TypesDiv" style="display: none">
        @Html.Action("_PartialTypesView", "Home")
    </div>
    <div id="DesignDiv" style="display: none">
        @Html.Action("_PartialDesignView", "Home")
    </div>
    <div id="MenuDiv" style="display: none">
        @Html.Action("_PartialMenuView", "Home")
    </div>
    <div id="CompetitionDiv" style="display: none">
        @Html.Action("_PartialCompetitionView", "Home")
    </div>
</div>


<script>
    function ShowTypes() {
        $("#TypesDiv").show();
        $("#DesignDiv").hide();
        $("#MenuDiv").hide();
        $("#CompetitionDiv").hide();
    }
    function ShowDesigns() {
        $("#TypesDiv").hide();
        $("#DesignDiv").show();
        $("#MenuDiv").hide();
        $("#CompetitionDiv").hide();
    }
    function ShowMenus() {
        $("#TypesDiv").hide();
        $("#DesignDiv").hide();
        $("#MenuDiv").show();
        $("#CompetitionDiv").hide();
    }
    function ShowCompetitions() {
        $("#TypesDiv").hide();
        $("#DesignDiv").hide();
        $("#MenuDiv").hide();
        $("#CompetitionDiv").show();
    }
</script>
