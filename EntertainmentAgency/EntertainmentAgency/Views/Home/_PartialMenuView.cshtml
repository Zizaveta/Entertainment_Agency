@model List<EntertainmentAgency.Models.Menu>

@if (Model != null)
{
    <div class="container">
        <div class="row">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="col-3 text-center border border-info rounded">
                    <div>
                        <div>
                            <img src=@Model[i].Image width="100px" height="100px" alt="Image here" />
                        </div>
                        <div>
                            @Html.DisplayFor(elem => elem[i].Name)
                        </div>
                        <div>
                            @Html.DisplayFor(elem => elem[i].About)
                        </div>
                        <div>
                            @Html.Label("$ ")
                            @Html.DisplayFor(elem => elem[i].Price)
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
}
else
{
    <p>Empty!!!</p>
}