@model List<EntertainmentAgency.Models.TypeOfEntertainment>

@if (Model != null)
{
    <div class="container">
        <div class="row">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="col-6 text-center border border-info rounded">
                    <div>
                        <div>
                            <img src=@Model[i].Img width="100px" height="100px" alt="Image here" />
                        </div>
                        <div>
                            @Html.DisplayFor(elem => elem[i].Type)
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
}
else
{
    <p>Empty!!!</p>
}
