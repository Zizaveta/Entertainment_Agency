@model List<EntertainmentAgency.Models.Menu>
@{
    ViewBag.Title = "Menu";
}


<div class="text-center">
    @if (Model != null)
    {
        <table class="table table-striped table-dark">
            <caption><h1>Menu</h1></caption>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>About</th>
                <th>Price, $</th>
            </tr>
            @for (int i = 0; i < Model.Count; i++)
            {
            <tr>
                <td><img src=@Model[i].Image height="100px" width="100px" /></td>
                <td>@Model[i].Name</td>
                <td>@Model[i].About</td>
                <td>@Model[i].Price</td>
            </tr>
            }
        </table>
    }
    else
    {
        <h1>Empty menu!!!</h1>
    }
</div>